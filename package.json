{
	"name": "@zilahir/stylelint-config",
	"version": "3.1.2",
	"description": "My Stylelint configuration",
	"keywords": [
		"stylelint",
		"config",
		"stylelint-config",
		"css",
		"scss",
		"lint"
	],
	"main": "index.js",
	"author": "Richard Zilahi <zilahi@gmail.com>",
	"repository": "github:zilahir/stylelint-config",
	"license": "MIT",
	"scripts": {
		"format": "prettier --ignore-path .gitignore --write",
		"lint": "eslint"
	},
	"dependencies": {
		"@zilahir/stylelint-config-rational-order": "^0.1.5",
		"stylelint-config-sass-guidelines": "^9.0.0"
	},
	"peerDependencies": {
		"stylelint": "^14.0.1"
	},
	"devDependencies": {
		"eslint": "7.32.0",
		"eslint-config-airbnb-base": "14.2.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.17.2",
		"husky": "^7.0.4",
		"lint-staged": "^11.0.0",
		"prettier": "^2.0.5",
		"stylelint": "^14.4.0",
		"yarn": "^1.22.4"
	},
	"files": [
		"index.js"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"yarn format",
			"yarn lint",
			"git add"
		],
		"*.{json,md,yml}": [
			"yarn format",
			"git add"
		]
	}
}
